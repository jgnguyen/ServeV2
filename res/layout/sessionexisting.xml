<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <EditText
        android:id="@+id/et_sessionkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_sessionkeysubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_sessionkey"
        android:onClick="submitCodeClick"
        android:text="@string/sessionKeyButton" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_sessionkey"
        android:layout_alignParentLeft="true"
        android:text="@string/sessionTV"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>